# Sailorskills Local Development Environment Configuration
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to git - it contains secrets

# ============================================================================
# SUPABASE (Required for all services)
# ============================================================================
# Get these from: https://supabase.com/dashboard/project/[PROJECT]/settings/api
#
# For LOCAL development with Supabase CLI:
# VITE_SUPABASE_URL=http://localhost:54321
# VITE_SUPABASE_ANON_KEY=[get from: supabase status]
#
# For REMOTE development (cloud Supabase):
VITE_SUPABASE_URL=https://fzygakldvvzxmahkdylq.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key (admin access - for server-side operations only)
# Used by: Billing, Operations
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Database connection string (for migrations, testing, scripts)
# Get from: Supabase Dashboard → Project Settings → Database → Connection string (Direct)
# Used by: Portal (testing), migration scripts
DATABASE_URL=postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# ============================================================================
# STRIPE (Payment processing)
# ============================================================================
# Get these from: https://dashboard.stripe.com/apikeys
# Used by: Estimator, Billing, Booking

# Test mode keys (for development)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# Webhook signing secret (for webhook verification)
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================================================
# GOOGLE APIS
# ============================================================================
# Get these from: https://console.cloud.google.com/apis/credentials
# Used by: Booking (Calendar), Video (YouTube)

# Google Calendar API (Booking service)
VITE_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
VITE_GOOGLE_API_KEY=your-google-api-key
GOOGLE_CLIENT_SECRET=your-client-secret

# YouTube API (Video service)
# Configuration in sailorskills-video/client_secrets.json

# ============================================================================
# AI / GEMINI API
# ============================================================================
# Get from: https://makersuite.google.com/app/apikey
# Used by: Inventory (product assistant), Marketing

VITE_GEMINI_API_KEY=your-gemini-api-key

# ============================================================================
# NOTION API
# ============================================================================
# Get from: https://www.notion.so/my-integrations
# Used by: Billing, Operations (if using Notion integration)

NOTION_API_KEY=secret_...
NOTION_DATABASE_ID=your-database-id

# ============================================================================
# INVENTORY PASSWORD
# ============================================================================
# SHA-256 hash of inventory access password
# Generate with: echo -n "your-password" | shasum -a 256
# Used by: Inventory service

VITE_INVENTORY_PASSWORD_HASH=your-sha256-hash

# ============================================================================
# GITHUB (for marketing integrations)
# ============================================================================
# Get from: https://github.com/settings/tokens
# Used by: Marketing service

GITHUB_TOKEN=ghp_...

# ============================================================================
# VERCEL KV (for caching - optional)
# ============================================================================
# Get from: https://vercel.com/dashboard/stores
# Used by: Marketing (commit story caching)

KV_REST_API_URL=https://...
KV_REST_API_TOKEN=...

# ============================================================================
# TWILIO (SMS notifications - optional)
# ============================================================================
# Get from: https://console.twilio.com
# Used by: Booking (SMS reminders - optional feature)

TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1...

# ============================================================================
# EMAIL (Resend)
# ============================================================================
# Get from: https://resend.com/api-keys
# Used by: Estimator, Billing (confirmation emails)

RESEND_API_KEY=re_...
EMAIL_FROM_ADDRESS=Sailor Skills <orders@sailorskills.com>

# BCC address for all outgoing emails (for monitoring/auditing)
# Used by: All services that send email
EMAIL_BCC_ADDRESS=standardhuman@gmail.com

# For testing, use:
# EMAIL_FROM_ADDRESS=onboarding@resend.dev

# ============================================================================
# OPERATIONS INTEGRATIONS
# ============================================================================
# Inventory API URL (when running locally)
# Used by: Operations (packing lists)

VITE_INVENTORY_API_URL=http://localhost:5177

# ============================================================================
# LOCAL DEVELOPMENT FLAGS
# ============================================================================
# Set to 'true' to use local Supabase instead of cloud
USE_LOCAL_SUPABASE=false

# Set to 'true' to enable debug logging
DEBUG=false

# Set to 'development' or 'production'
NODE_ENV=development

# ============================================================================
# TEST USER CREDENTIALS
# ============================================================================
# Standard test user for development and automated testing
# Fill in with actual test account credentials

TEST_USER_EMAIL=your-test-user@example.com
TEST_USER_PASSWORD=your-test-password
